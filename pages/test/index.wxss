.main {
  padding: 40rpx;
  padding-left: 80rpx;
  padding-right: 0rpx;
}

.xin-list {
  width: 100%;
  position: relative;
}
.xin-list .single:nth-of-type(1) {
  z-index: 10;
}

.xin-list .single {
  transition: all 1s;
  overflow: hidden;
  margin-top:15px;
  width: calc(100% - 60rpx);
  height: calc(100vh - 180rpx - 11vh);
  background: #fff;
  position: absolute;
  border-radius: 8rpx;
  box-shadow: 3px 3px 10px 0px #C0C4CC;
}

