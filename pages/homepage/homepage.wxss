/* pages/homepage/homepage.wxss */
page {
  background: #f3f3f3;
}

.user-info {
  position: relative;
  text-align: center;
}

.back-img {
  width: 100%;
  height: 590rpx;
}

.user-head-container {
  position: absolute;
  top: 220rpx;
  left: 0;
  right: 0;
  width: 200rpx;
  margin: auto;
  color: #fff;
}

.user-head {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 16rpx;
  border-radius: 50%;
  border: 2px solid #fff;
  box-shadow: 0 5rpx 20rpx #fff;
}

.edit-btn {
  width: 120rpx;
  padding: 4rpx 8rpx;
  margin: 28rpx auto;
  font-size: 28rpx;
  border: 1rpx solid #fff;
  border-radius: 30rpx;
}

.tab-container {
  display: flex;
  padding: 8rpx 0;
  font-size: 32rpx;
  background: #fff;
}

.tab {
  flex: 1;
  text-align: center;
}