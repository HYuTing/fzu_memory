<view class="page-body">
  <view class="page-section page-section-gap" >
    <map
      id="myMap"
      style="width: 100%; height: 100vh;"
      latitude="{{latitude}}"
      longitude="{{longitude}}"
      markers="{{markers}}"
      subkey="GBZBZ-JGAH2-OSWUF-CPPZN-YRDVZ-U7BR3"
      show-location="true">
      <cover-view class='loginprompt' wx:if="{{loginflag == 0}}">
        <button open-type="getUserInfo" bindgetuserinfo="getUserInfo" class='loginbtn'> 开启 </button>
      </cover-view>
      <cover-view class="btns" wx:if="{{loginflag == 1}}">
        <cover-image src="../../img/people1.png" class="iconbtn" bindtap="tohomepage"></cover-image>
        <cover-image src="../../img/like1.png" class="iconbtn" bindtap="changeName"></cover-image>
        <cover-image src="../../img/selection1.png" class="iconbtn" bindtap="toranklist"></cover-image>
      </cover-view>
      <cover-view class="btns addbtncontainer" wx:if="{{loginflag == 1}}">
        <cover-image src="../../img/round_add_fill.png" class="addbtn" bindtap="toReport"></cover-image>
      </cover-view>

      <!-- <cover-view class='scroll-box' wx:if="{{loginflag == 1}}">
