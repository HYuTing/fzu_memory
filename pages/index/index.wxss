/* pages/index/index.wxss */
page {
  overflow: hidden;
}

.page-section-gap{
  box-sizing: border-box;
  padding: 0;
}

.page-body-button {
  margin-bottom: 30rpx;
}

.btns {
  width: 130rpx;
  margin-top: 140rpx;
}

.iconbtn {
  width: 90rpx;
  height: 90rpx;
  margin: 40rpx;
}

.addbtn {
  width: 190rpx;
  height: 190rpx;
}

.addbtncontainer {
  position: absolute;
  bottom: 68rpx;
  right: 32rpx;
  width: 180rpx;
}

.loginprompt {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: white;
}

.loginbtn {
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  margin: auto;
  width: 200rpx;
  height: 200rpx;
  line-height: 200rpx;
  border-radius: 100rpx;
}

.scroll-box {
  width: 100%;
  height: 300rpx;
  margin-top: 140rpx;
  overflow-x: scroll;
  overflow-y: hidden;
  white-space: nowrap;
}

.card {
  display: inline-block;
  width: 360rpx;
  height: 300rpx;
  margin-right: 20rpx;
  border-radius: 8rpx;
  box-shadow: 0 0 20rpx #8a8a8a;
  background: #fff;
}