/* components/detail/detail.wxss */
page {
  padding-bottom: 10rpx;
}

.back {
  height: 100%;
}

.main {
  margin: 20rpx;
  padding: 10rpx 40rpx;
  padding-top: 36rpx;
  /* border-radius: 8rpx; 
  box-shadow: 0 0 20rpx #DCDFE6;
  border: 1rpx solid rgba(213, 152, 147, 0.514); */
  color: #303133;
}

.userInfo {
  position: relative;
  width: 100%;
  margin-bottom: 36rpx;
}

.userHeader {
  width: 100rpx;
  height: 100rpx;
  margin-bottom: -4rpx;
  margin-left: 10rpx;
  margin-right: 32rpx;
  border-radius: 50%;
}

.uesrName {
  position: absolute;
  top: 4rpx;
  left: 145rpx;
  font-size: 36rpx;
  font-weight: 400;
}

.new-time {
  font-size: 28rpx;
  color: #909399;
  padding-right: 26rpx;
}

.rank-text {
  font-size: 28rpx;
  color: #D59893;
}

.rank-text2 {
  font-size: 28rpx;
  color: #909399;
}

.texts {
  font-size: 34rpx;
}

.textImg {
  width: 100%;
  margin: 34rpx 0;
  margin-top: 28rpx;
  border-radius: 8rpx;
  border: 1rpx solid rgba(0, 0, 0, 0.1);
}

.star {
  position: absolute;
  top: 3rpx;
  right: 0;
  display: block;
  width: 60rpx;
  height: 50rpx;
}

.locadicon {
  width: 35rpx;
  height: 35rpx;
  margin-bottom: -4rpx;
}

.locadInfo {
  width: 100%;
  font-size: 28rpx;
  color: #C0C4CC;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.iconbtns {
  margin-top: 40rpx;
  padding-bottom: 30rpx;
  text-align: right;
}

.iconbtn {
  width: 44rpx;
  height: 44rpx;
  margin: 0 10rpx;
  margin-left: 36rpx;
  margin-bottom: -10rpx;
}

.like-num,.share-num {
  color: #909399;
  font-size: 30rpx;
}

.underline {
  border-bottom: 1rpx solid #DCDFE6;
  width: 100%;
}

.commentContainer {
  padding-top: 16rpx;
}

.comments {
  margin: 9rpx 0;
}
.comment1 {
  font-size: 30rpx;
  font-weight: bold;
}
.comment2 {
  font-size: 30rpx;
}

input {
  width: 96%;
  height: 60rpx;
  margin: 36rpx 0;
  margin-left: -4rpx;
  padding-left: 24rpx;
  border-radius: 4rpx;
  font-size: 30rpx;
  color:#606266;
  background: #F2F6FC;
}
.placeholderstyle {
  color:#C0C4CC;
  font-size: 30rpx;
}