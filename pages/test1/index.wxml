<!--index.wxml-->
<view class="container">
  <view class="card_wrap">
    <view bindtouchend="slidethis"
    animation="{{id === 0 ? animationData : ''}}"
    class="card_item card{{ id + 1 }} "
    wx:for="{{ cardInfoList }}"
    wx:key="unique"
    wx:for-index="id"
    wx:for-item="item">
      <span class="change_icon" bindtap="slidethis" wx:if="{{ id === 0 }}">
        <image src="../../img/changeicon.png"></image>
      </span>
      
      <image src="{{ item.cardUrl }}"></image>
    </view>
  </view>
</view>
