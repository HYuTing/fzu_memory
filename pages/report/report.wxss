/* components/report/report.wxss */
page {
  background: #f3f3f3;
}

.main {
  padding: 14rpx;
  padding-bottom: 24rpx;
  background: #fff;
}

.textContainer {
  width: 94%;
  min-height: 300rpx;
  margin: auto;
  margin-bottom: 30rpx;
  padding: 12rpx 16rpx;
  font-size: 34rpx;
  color: #303133;
}

.addView {
  position: relative;
  padding: 5rpx 27rpx;
}

.addImg {
  width: 200rpx;
  height: 200rpx;
  border: 1px solid #E4E7ED;
  border-radius: 8rpx;
  overflow: hidden;
}

.addicon {
  width: 100%;
}

.chosedImg {
  width: 100rpx;
  height: 100rpx;
  margin: auto;
}

.locationicon {
  width: 36rpx;
  height: 36rpx;
  margin-bottom: -6rpx;
  margin-right: 10rpx;
}

.locationAddress {
  color: #C0C4CC;
  font-size: 28rpx;
}

.reportBtn {
  position: absolute;
  bottom: 9rpx;
  right: 22rpx;
  width: 140rpx;
  line-height: 60rpx;
  font-size: 28rpx;
  background: #D59893;
  color: #fff;
}