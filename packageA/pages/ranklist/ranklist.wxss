/* pages/ranklist/ranklist.wxss */
page {
  color: #303133;
}

.price {
  position: relative;
  width: 96%;
  height: 220rpx;
  margin: 10rpx 2%;
  border-radius: 10rpx; 
  box-shadow: 0 0 20rpx #C0C4CC;
  background: #fff;
}

.masking {
 position: absolute;
 top: 0;
 left: 0;
 width: 100%;
 height: 100%;
 z-index: 99;
}

.tri1 {
  width:0;
  height:0;
  border-width:0 0 80rpx 80rpx;
  border-style:solid;
  
  margin:40px auto;
  transform: rotate(180deg);
  position: absolute;
  margin-top: 0rpx;
}

#first-tri {
  border-color:transparent transparent #eec34b;
}

#second-tri {
  border-color:transparent transparent #CCBDAF;
}

#third-tri {
  border-color:transparent transparent #F9871D;
}

.tri2 {
  width:0;
  height:0;
  border-width:0 0 40rpx 40rpx;
  border-style:solid;
  border-color:transparent transparent #fff;
  margin:40px auto;
  transform: rotate(180deg);
  position: absolute;
  margin-top: 0rpx;
}

.price-icon {
  width: 54rpx;
  height: 54rpx;
  margin-bottom: -10rpx;
  padding-left: 65rpx;
  padding-top: 72rpx;
  padding-right: 30rpx;
}

.rank-num {
  padding-left: 65rpx;
  padding-right: 30rpx;
  font-size: 36rpx;
}

.rank-num1 {
  display: inline-block;
  padding-left: 56rpx;
  padding-right: 30rpx;
  font-size: 28rpx;
}

.head-icon {
  width: 100rpx;
  height: 100rpx; 
  border-radius: 50%;
  margin-top: 60rpx;
  margin-bottom: -38rpx;
  margin-right: 31rpx;
}

.username {
  font-size: 32rpx;
  position: absolute;
  margin-top: 94rpx;
}

.like-nums {
  font-size: 30rpx;
  padding-right: 16rpx;
  color : #F56C6C;
}

.likes {
  position: absolute;
  margin-top: -32rpx;
  margin-left: 276rpx;
}

.like-icon {
  width: 35rpx;
  height: 35rpx;
  margin-bottom: -6rpx;
}

.text-img {
	/*transform: skew(37deg,0deg);*/
  max-width: 100%;
  max-height: 100%;
  border-radius: 10rpx;
  border-bottom-left-radius: 0;
}

.img1 { 
  position: absolute;
  right: 0;
  width: 291rpx;
	height: 220rpx;
  margin-top: 0rpx;  
}

.triangle {
  width:0;
  height:0;
  border-width:0 0 221rpx 166rpx;
  border-style:solid;
  border-color:transparent transparent #fff;
  margin:40px auto;
  transform: rotate(180deg);
