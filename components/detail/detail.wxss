.reback {
  width: 50rpx;
  height: 50rpx;
  margin: 59rpx 36rpx;
  margin-bottom: 16rpx;
}

.main {
  margin: 30rpx 20rpx;
  padding: 10rpx 68rpx;
  padding-top: 36rpx;
  border-radius: 8rpx; 
  box-shadow: 0 0 20rpx #8a8a8a;
  border: 1rpx solid #F6C6C6;
}

.userInfo {
  position: relative;
  margin-bottom: 30rpx;
}

.userHeader {
  width: 100rpx;
  height: 100rpx;
  margin-bottom: -4rpx;
  margin-left: 10rpx;
  margin-right: 32rpx;
  border-radius: 50%;
}

.uesrName {
  position: absolute;
  top: 4rpx;
  left: 150rpx;
  font-size: 36rpx;
  font-weight: 400;
}

.new_time {
  font-size: 28rpx;
  color: #bfbfbf;
  padding-right: 26rpx;
}

.rank_text {
  font-size: 28rpx;
  color: #F09A95;
}

.rank_text2 {
  font-size: 28rpx;
  color: #8a8a8a;
}

.texts {
  font-size: 32rpx;
}

.textImg {
  width: 100%;
  margin: 34rpx 0;
  border-radius: 8rpx;
}

.star {
  position: absolute;
  top: 0;
  right: -260rpx;
  width: 40rpx;
  height: 40rpx;
}

.locadicon {
  width: 35rpx;
  height: 35rpx;
  margin-bottom: -4rpx;
}

.locadInfo {
  font-size: 28rpx;
  color: #8a8a8a;
}

.iconbtns {
  margin-top: 40rpx;
  padding-bottom: 30rpx;
  text-align: right;
}

.iconbtn {
  width: 40rpx;
  height: 40rpx;
  margin: 0 10rpx;
  margin-left: 36rpx;
  margin-bottom: -8rpx;
}

.like_num,.share_num {
  color: #8a8a8a;
  font-size: 28rpx;
}

.underline {
  border-bottom: 1rpx solid #cdcdcd;
  width: 100%;
}

.commentContainer {
  padding-top: 15rpx;
}

.comments {
  margin: 9rpx 0;
}
.comment1 {
  font-size: 28rpx;
